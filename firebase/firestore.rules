rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /faqs/{faqs_id} {
      allow read: if true
    }
  
		match /dishes/{dish_id} {
      allow read: if true
    }  

  	match /cuisines/{cuisine_id} {
      allow read: if true
    }
  
  	match /recieved_questions/{question_id} {
      allow create, update: if request.auth != null
    }
  
    match /orders/{order} {
      allow create, update: if request.auth != null
    }
    
    match /{document=**} {
	    allow write, read: if true;
    }
  }
}